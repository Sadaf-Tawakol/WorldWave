    margin-left: 0;
  }

  .stat-box {
    width: 100%;
    margin-bottom: 10px;
  }
}

@media (max-width: 768px) {
  .sidebar {
    display: none; 
  }

  .main-content {
    margin-left: 0;
  }

  .card {
    width: 80%;
    margin: 20px auto;
  }

  .details-card {
    width: 90%;
    margin: 20px auto;
  }

  .stats-container {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .stat-box {
    width: 90%;
    margin: 10px 0;
  }

